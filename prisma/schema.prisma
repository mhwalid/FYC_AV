generator client {
provider = "prisma-client-js"
previewFeatures = ["deno"]
output = "../generated/client"
}


datasource db {
provider = "mongodb"
url = env("DATABASE_URL")
directUrl = env("DIRECT_DATABASE_URL")
}

model SharePrice {
 id String @id @default(auto()) @map("_id") @db.ObjectId
nom String @unique
value Float
volume Int
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
Transaction Transaction[]


@@map(name: "shareprices")
}


model Role {
 id String @id @default(auto()) @map("_id") @db.ObjectId
libelle String @unique
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
User User[]


@@map(name: "roles")
}


model Transaction {
 id String @id @default(auto()) @map("_id") @db.ObjectId
volume Int
typeTransaction String
transactedAt DateTime @default(now())
userId String @db.ObjectId
user User @relation(fields: [userId], references: [id])
sharePriceId String @db.ObjectId
sharePrice SharePrice @relation(fields: [sharePriceId], references: [id])

@@map(name: "transactions")
}


model User {
id String @id @default(auto()) @map("_id") @db.ObjectId
firstName String
lastName String
email String
password String
account Float
isCdu Boolean? @default(false)
cduAcceptedAt DateTime @default(now())
registerAt DateTime @default(now())
updatedAt DateTime @default(now())
roleId String @db.ObjectId
role Role @relation(fields: [roleId], references: [id])
Transaction Transaction[]


@@map(name: "users")
}

